{
  "name": "vscode-kind2",
  "description": "A language client for kind2",
  "author": "Abdalrhman Mohamed",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "publisher": "kind2-mc",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:lustre"
  ],
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "lustre",
        "aliases": [
          "lus"
        ],
        "extensions": [
          "lus"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "vscode-kind2.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "vscode-kind2.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "catCoding.start",
        "title": "Start new cat coding session",
        "category": "Cat Coding"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.62",
    "@types/vscode": "1.43.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "mocha": "^8.1.1",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0"
  }
}