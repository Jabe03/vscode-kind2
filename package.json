{
  "name": "vscode-kind2",
  "displayName": "Kind 2",
  "icon": "icons/kind.png",
  "description": "Language support for Kind 2",
  "author": "Abdalrhman M Mohamed",
  "license": "MIT",
  "version": "0.2.0",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kind2-mc/vscode-kind2"
  },
  "publisher": "kind2-mc",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onLanguage:lustre"
  ],
  "main": "out/main",
  "contributes": {
    "languages": [
      {
        "id": "lustre",
        "aliases": [
          "lus"
        ],
        "extensions": [
          "lus"
        ],
        "configuration": "language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lustre",
        "scopeName": "source.lus",
        "path": "syntaxes/lustre.tmLanguage.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "kind2"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Kind 2",
      "properties": {
        "kind2.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "kind2.kind2Path": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "",
          "description": "Path to the kind2 executable used by the extension."
        },
        "kind2.smtSolver": {
          "scope": "machine-overridable",
          "enum": [
            "Z3",
            "CVC4",
            "Yices",
            "Yices2",
            "Boolector",
            "MathSAT"
          ],
          "default": "Z3",
          "description": "SMT solver backend used by kind2."
        },
        "kind2.smtSolverPath": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "",
          "description": "Path to the SMT solver backend used by kind2."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kind2",
          "title": "Kind 2",
          "icon": "icons/kind.png"
        }
      ]
    },
    "views": {
      "kind2": [
        {
          "id": "properties",
          "name": "Properties"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "kind2/counterExample",
          "group": "inline@1",
          "when": "view == properties && viewItem == failed"
        },
        {
          "command": "kind2/check",
          "group": "inline@2",
          "when": "view == properties && viewItem == component"
        },
        {
          "command": "kind2/showSource",
          "group": "inline@3",
          "when": "view == properties"
        }
      ]
    },
    "commands": [
      {
        "command": "kind2/counterExample",
        "title": "Show Counter Example",
        "icon": "$(output)"
      },
      {
        "command": "kind2/check",
        "title": "Check component",
        "icon": "$(run)"
      },
      {
        "command": "kind2/showSource",
        "title": "Show source",
        "icon": "$(go-to-file)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test": "sh scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.4"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "@types/node": "^12.20.21",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/parser": "^2.3.0",
    "esbuild": "^0.13.3",
    "eslint": "^6.4.0",
    "js-yaml": "^4.1.0",
    "mocha": "^8.4.0",
    "typescript": "^4.4.2",
    "vsce": "^1.100.1",
    "vscode-test": "^1.6.1"
  }
}
