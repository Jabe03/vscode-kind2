{
  "name": "vscode-kind2",
  "description": "A language client for kind2",
  "author": "Abdalrhman M Mohamed",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kind2-mc/vscode-kind2"
  },
  "publisher": "Kind 2 Developers",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:lustre"
  ],
  "extensionDependencies": [
    "MercierCorentin.lustre"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "lustre",
        "aliases": [
          "lus"
        ],
        "extensions": [
          "lus"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Kind 2",
      "properties": {
        "vscode-kind2.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kind2",
          "title": "Kind 2",
          "icon": "./icons/beaker.svg"
        }
      ]
    },
    "views": {
      "kind2": [
        {
          "id": "properties",
          "name": "Properties"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "kind2/check",
          "group": "inline@2",
          "when": "view == properties && viewItem == component"
        },
        {
          "command": "kind2/showSource",
          "group": "inline@3",
          "when": "view == properties"
        }
      ]
    },
    "commands": [
      {
        "command": "angular-webview.start",
        "title": "Start new cat coding session",
        "category": "Cat Coding"
      },
      {
        "command": "kind2/check",
        "title": "Check component",
        "icon": {
          "dark": "./icons/start-dark.svg",
          "light": "./icons/start-light.svg"
        }
      },
      {
        "command": "kind2/showSource",
        "title": "Show source",
        "icon": {
          "dark": "./icons/open-file-dark.svg",
          "light": "./icons/open-file-light.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.62",
    "@types/vscode": "1.43.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "mocha": "^8.1.1",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0"
  }
}